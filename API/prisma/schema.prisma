generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  nome    String
  foto    String 
  unidade_de_medida String
  marca   String
  tratamento String
  valor Float
}
model User {
  id String   @id @default(auto()) @map("_id") @db.ObjectId
  nome String 
  cpf String?
  email String
  celular String
  uf  String
  rua String
  cep String
  usuario String
  senha String
  nivel_acesso Int
}
//Entender Relacionamento nessa tabela
model Stock {
  id String   @id @default(auto()) @map("_id") @db.ObjectId
}
